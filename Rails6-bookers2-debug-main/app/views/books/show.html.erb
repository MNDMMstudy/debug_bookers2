<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <td>
            <div id="favorite_btn_<%= @books.id %>" >
              <%= render 'favorites/favorite', books: @books %>
            </div>
          </td>
          <td>
            <p>コメント件数： <%= @books.post_comments.count %></p>
          </td>
          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-danger" %></td>
            <% end %>
        </tr>
      </table>
      <table class="table">
        <tbody>
          <% @books.post_comments.each do |post_comment| %>
            <tr>
              <td><%= link_to(post_comment.user) do %>
                <%= image_tag post_comment.user.get_profile_image, size:'100x100' %><br>
                <%= post_comment.user.name %>
                <% end %>
              </td>
              <td>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
              </td>
              <td>
                <%= post_comment.comment %>
              </td>
              <% if post_comment.user == current_user %>
                <td>
                  <%= link_to "Destroy", book_post_comment_path(post_comment.id), method: :delete, "data-confirm" => "本当に消しますか？" ,class:"btn btn-danger" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= form_with model: [@books, @post_comment] do |f| %>
          <%= f.text_area :comment %>
          <%= f.submit "送信" %>
        <% end %>
      </div>

    </div>
  </div>
</div>